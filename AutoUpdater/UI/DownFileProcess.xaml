<my:WindowBase  xmlns:my="clr-namespace:Ezhu.AutoUpdater" x:Class="Ezhu.AutoUpdater.UI.DownFileProcess"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="软件更新提醒" Height="300" Width="600" x:Name="w">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition  Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Border x:Name="bProcess" BorderBrush="#42464d" Width="580" Height="40" BorderThickness="1" HorizontalAlignment="Center">
            <Rectangle x:Name="rectProcess" Fill="Green" Width="0" HorizontalAlignment="Left"></Rectangle>
        </Border>
        <TextBlock x:Name="txtProcess" Foreground="White" TextAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <ScrollViewer Width="580" Grid.Row="1" ScrollViewer.VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <TextBlock x:Name="txtDes" TextWrapping="Wrap" Foreground="White" Width="560"></TextBlock>
        </ScrollViewer>
    </Grid>
</my:WindowBase >